<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ArtisanConnect - Lubumbashi</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Mobile Container -->
    <div class="mobile-container">
        <!-- CLIENT HOME SCREEN -->
        <div id="client-home" class="screen active">
            <!-- Header -->
            <div class="header-gradient">
                <div class="header-top">
                    <div>
                        <p class="header-subtitle">Bienvenue à</p>
                        <h1 class="header-title">ArtisanConnect</h1>
                        <p class="header-subtitle">Lubumbashi</p>
                    </div>
                    <button class="btn-artisan" onclick="navigateTo('artisan-login')">
                        Artisan
                    </button>
                </div>
                
                <!-- Search Bar -->
                <button class="search-bar" onclick="navigateTo('search-filter')">
                    <svg class="icon-search" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <span>Trouver un artisan...</span>
                </button>
            </div>

            <!-- Categories Section -->
            <div class="content-section">
                <div class="section-header">
                    <h2>Catégories</h2>
                    <button class="link-text">Voir tout</button>
                </div>
                
                <div class="categories-grid">
                    <button class="category-card" onclick="selectCategory('Électricien')">
                        <div class="category-icon bg-amber">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                            </svg>
                        </div>
                        <p>Électricien</p>
                    </button>

                    <button class="category-card" onclick="selectCategory('Plombier')">
                        <div class="category-icon bg-blue">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M7 19A2 2 0 0 1 9 21h6a2 2 0 0 1 2-2V5a2 2 0 0 1-2-2H9a2 2 0 0 1-2 2v14z"></path>
                            </svg>
                        </div>
                        <p>Plombier</p>
                    </button>

                    <button class="category-card" onclick="selectCategory('Menuisier')">
                        <div class="category-icon bg-orange">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                            </svg>
                        </div>
                        <p>Menuisier</p>
                    </button>

                    <button class="category-card" onclick="selectCategory('Mécanicien')">
                        <div class="category-icon bg-gray">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"></path>
                                <circle cx="7" cy="17" r="2"></circle>
                                <circle cx="17" cy="17" r="2"></circle>
                            </svg>
                        </div>
                        <p>Mécanicien</p>
                    </button>

                    <button class="category-card" onclick="selectCategory('Peintre')">
                        <div class="category-icon bg-purple">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18.37 2.63 14 7l-1.59-1.59a2 2 0 0 0-2.82 0L8 7l9 9 1.59-1.59a2 2 0 0 0 0-2.82L17 10l4.37-4.37a2.12 2.12 0 1 0-3-3Z"></path>
                                <path d="M9 8c-2 3-4 3.5-7 4l8 10c2-1 6-5 6-7"></path>
                                <path d="M14.5 17.5 4.5 15"></path>
                            </svg>
                        </div>
                        <p>Peintre</p>
                    </button>

                    <button class="category-card" onclick="selectCategory('Maçon')">
                        <div class="category-icon bg-red">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                            </svg>
                        </div>
                        <p>Maçon</p>
                    </button>
                </div>

                <!-- Quick CTA -->
                <button class="btn-primary" onclick="navigateTo('search-filter')">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <span>Trouver un artisan maintenant</span>
                </button>
            </div>

            <!-- Trust Indicators -->
            <div class="trust-section">
                <div class="trust-card">
                    <h3 class="trust-title">Pourquoi nous choisir ?</h3>
                    <div class="trust-list">
                        <div class="trust-item">
                            <div class="trust-dot"></div>
                            <p>Artisans vérifiés et qualifiés</p>
                        </div>
                        <div class="trust-item">
                            <div class="trust-dot"></div>
                            <p>Contact direct par WhatsApp</p>
                        </div>
                        <div class="trust-item">
                            <div class="trust-dot"></div>
                            <p>Avis clients authentiques</p>
                        </div>
                        <div class="trust-item">
                            <div class="trust-dot"></div>
                            <p>Rapide et fiable</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- SEARCH/FILTER SCREEN -->
        <div id="search-filter" class="screen">
            <div class="screen-header">
                <button class="btn-back" onclick="navigateTo('client-home')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m15 18-6-6 6-6"></path>
                    </svg>
                </button>
                <h2 class="screen-title">Rechercher un artisan</h2>
                <div style="width: 24px;"></div>
            </div>

            <div class="content-section">
                <!-- Category Selection -->
                <div class="form-group">
                    <label class="form-label">Catégorie</label>
                    <select id="category-select" class="form-select">
                        <option value="">Toutes les catégories</option>
                        <option value="Électricien">Électricien</option>
                        <option value="Plombier">Plombier</option>
                        <option value="Menuisier">Menuisier</option>
                        <option value="Mécanicien">Mécanicien</option>
                        <option value="Peintre">Peintre</option>
                        <option value="Maçon">Maçon</option>
                    </select>
                </div>

                <!-- Distance Filter -->
                <div class="form-group">
                    <label class="form-label">Distance maximale</label>
                    <select class="form-select">
                        <option value="">Toutes les distances</option>
                        <option value="2">Moins de 2 km</option>
                        <option value="5">Moins de 5 km</option>
                        <option value="10">Moins de 10 km</option>
                    </select>
                </div>

                <!-- Price Range -->
                <div class="form-group">
                    <label class="form-label">Gamme de prix</label>
                    <select class="form-select">
                        <option value="">Tous les prix</option>
                        <option value="budget">Budget ($ - $$)</option>
                        <option value="moyen">Moyen ($$-$$$)</option>
                        <option value="premium">Premium ($$$-$$$$)</option>
                    </select>
                </div>

                <!-- Rating Filter -->
                <div class="form-group">
                    <label class="form-label">Note minimale</label>
                    <select class="form-select">
                        <option value="0">Toutes les notes</option>
                        <option value="3">3+ étoiles</option>
                        <option value="4">4+ étoiles</option>
                        <option value="4.5">4.5+ étoiles</option>
                    </select>
                </div>

                <!-- Availability -->
                <div class="form-group">
                    <label class="form-label">Disponibilité</label>
                    <select class="form-select">
                        <option value="">Tous</option>
                        <option value="Disponible">Disponible maintenant</option>
                        <option value="Occupé">Inclure occupés</option>
                    </select>
                </div>

                <button class="btn-primary" onclick="navigateTo('artisan-list')">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <span>Rechercher</span>
                </button>
            </div>
        </div>

        <!-- ARTISAN LIST SCREEN -->
        <div id="artisan-list" class="screen">
            <div class="screen-header">
                <button class="btn-back" onclick="navigateTo('search-filter')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m15 18-6-6 6-6"></path>
                    </svg>
                </button>
                <h2 class="screen-title">Artisans disponibles</h2>
                <div style="width: 24px;"></div>
            </div>

            <div class="content-section">
                <p class="results-count">12 artisans trouvés</p>
                
                <div id="artisan-list-container" class="artisan-list">
                    <!-- Les artisans seront insérés ici par JavaScript -->
                </div>
            </div>
        </div>

        <!-- ARTISAN PROFILE SCREEN -->
        <div id="artisan-profile" class="screen">
            <div class="screen-header">
                <button class="btn-back" onclick="navigateTo('artisan-list')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m15 18-6-6 6-6"></path>
                    </svg>
                </button>
                <h2 class="screen-title">Profil</h2>
                <div style="width: 24px;"></div>
            </div>

            <div id="artisan-profile-content" class="content-section">
                <!-- Le contenu sera inséré par JavaScript -->
            </div>
        </div>

        <!-- ARTISAN LOGIN SCREEN -->
        <div id="artisan-login" class="screen">
            <div class="screen-header">
                <button class="btn-back" onclick="navigateTo('client-home')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m15 18-6-6 6-6"></path>
                    </svg>
                </button>
                <h2 class="screen-title">Connexion Artisan</h2>
                <div style="width: 24px;"></div>
            </div>

            <div class="content-section">
                <div class="login-icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </div>

                <h3 class="login-title">Espace Artisan</h3>
                <p class="login-subtitle">Connectez-vous pour gérer votre profil et vos demandes</p>

                <form onsubmit="loginArtisan(event)">
                    <div class="form-group">
                        <label class="form-label">Numéro de téléphone</label>
                        <input type="tel" class="form-input" placeholder="+243 XXX XXX XXX" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Code PIN</label>
                        <input type="password" class="form-input" placeholder="••••" maxlength="4" required>
                    </div>

                    <button type="submit" class="btn-primary">
                        Se connecter
                    </button>
                </form>

                <div class="login-help">
                    <p>Nouveau sur ArtisanConnect ?</p>
                    <button class="link-text">Créer un compte artisan</button>
                </div>
            </div>
        </div>

        <!-- ARTISAN DASHBOARD -->
        <div id="artisan-dashboard" class="screen">
            <div class="header-gradient">
                <div class="dashboard-header">
                    <div>
                        <p class="header-subtitle">Bienvenue</p>
                        <h1 class="header-title">Patrick Mukendi</h1>
                        <p class="header-subtitle">Électricien</p>
                    </div>
                    <button class="btn-logout" onclick="navigateTo('client-home')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                    </button>
                </div>
            </div>

            <div class="content-section">
                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon bg-green">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <p class="stat-value">8</p>
                        <p class="stat-label">Nouvelles demandes</p>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon bg-blue">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                            </svg>
                        </div>
                        <p class="stat-value">4.8</p>
                        <p class="stat-label">Note moyenne</p>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="action-cards">
                    <button class="action-card" onclick="navigateTo('client-requests')">
                        <div class="action-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                            </svg>
                        </div>
                        <div class="action-content">
                            <h3>Demandes clients</h3>
                            <p>Gérer vos demandes en attente</p>
                        </div>
                        <div class="notification-badge">8</div>
                    </button>

                    <button class="action-card" onclick="navigateTo('profile-management')">
                        <div class="action-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </div>
                        <div class="action-content">
                            <h3>Mon profil</h3>
                            <p>Modifier mes informations</p>
                        </div>
                    </button>

                    <button class="action-card" onclick="navigateTo('availability')">
                        <div class="action-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                        </div>
                        <div class="action-content">
                            <h3>Disponibilité</h3>
                            <p>Gérer mon statut</p>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="app.js"></script>
</body>
</html>
